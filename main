local function StartLoading()
    local sg = Instance.new("ScreenGui", game.CoreGui)
    local frame = Instance.new("Frame", sg)
    frame.Size = UDim2.new(1, 0, 1, 0)
    frame.BackgroundColor3 = Color3.fromRGB(5, 5, 12)
    
    local txt = Instance.new("TextLabel", frame)
    txt.Size = UDim2.new(0, 600, 0, 100)
    txt.Position = UDim2.new(0.5, -300, 0.4, 0)
    txt.Text = "SOVEREIGN ULTIMATE V40\nVeriler Ege Ä°Ã§in HazÄ±rlanÄ±yor..."
    txt.TextColor3 = Color3.fromRGB(0, 170, 255)
    txt.Font = Enum.Font.GothamBold
    txt.TextSize = 38
    txt.BackgroundTransparency = 1
    
    local barBG = Instance.new("Frame", frame)
    barBG.Size = UDim2.new(0, 400, 0, 10)
    barBG.Position = UDim2.new(0.5, -150, 0.6, 0)
    barBG.BackgroundColor3 = Color3.fromRGB(20, 20, 30)
    
    local bar = Instance.new("Frame", barBG)
    bar.Size = UDim2.new(0, 0, 1, 0)
    bar.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
    bar:TweenSize(UDim2.new(1, 0, 1, 0), "Out", "Quart", 3.5)
    
    task.wait(4)
    sg:Destroy()
end
StartLoading()

