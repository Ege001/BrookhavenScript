-- 1. Geli≈ümi≈ü Loader ve G√ºvenlik
local function AdvancedLoading()
    local sg = Instance.new("ScreenGui", game.CoreGui)
    sg.Name = "SovLoader"
    local frame = Instance.new("Frame", sg)
    frame.Size = UDim2.new(1, 0, 1, 0)
    frame.BackgroundColor3 = Color3.fromRGB(2, 2, 5)
    
    local grad = Instance.new("UIGradient", frame)
    grad.Color = ColorSequence.new({
        ColorSequenceKeypoint.new(0, Color3.fromRGB(0, 20, 50)),
        ColorSequenceKeypoint.new(1, Color3.fromRGB(0, 5, 10))
    })

    local txt = Instance.new("TextLabel", frame)
    txt.Size = UDim2.new(0, 600, 0, 100)
    txt.Position = UDim2.new(0.5, -300, 0.45, 0)
    txt.Text = "SOVEREIGN APEX V46\nFull Kapasite Y√ºkleniyor..."
    txt.TextColor3 = Color3.fromRGB(0, 200, 255)
    txt.Font = Enum.Font.GothamBold
    txt.TextSize = 35
    txt.BackgroundTransparency = 1
    
    task.wait(1.2)
    -- Animasyonlu kapanƒ±≈ü
    for i = 0, 1, 0.1 do
        frame.BackgroundTransparency = i
        txt.TextTransparency = i
        task.wait(0.05)
    end
    sg:Destroy()
end
pcall(AdvancedLoading)

-- 2. Servisler
