-- Modern UI YÃ¼kleme (Sirius Rayfield)
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local lp = game.Players.LocalPlayer
local runService = game:GetService("RunService")
local camera = workspace.CurrentCamera
local rs = game:GetService("ReplicatedStorage")
local ownerName = "EgeKazak_Real1" -- Mutlak sahip ismi sisteme tanÄ±mlandÄ±

local Window = Rayfield:CreateWindow({
   Name = "Gemini Hub V25 | OWNER: " .. ownerName,
   LoadingTitle = "Absolute Sovereign Yetkileri AlÄ±nÄ±yor...",
   LoadingSubtitle = "EgeKazak_Real1 Ä°Ã§in Tam EriÅŸim Sistemi",
   ConfigurationSaving = { Enabled = true, FolderName = "GeminiV25" }
})

-- DEÄžÄ°ÅžKENLER
local flying = false
local noclip = false
local flySpeed = 50
local bGyro, bVel

-- EÅžYA LÄ°STESÄ° (TAMAMEN OTOMATÄ°K TARAMA)
local uniqueItems = {}
local seen = {}
for _, item in pairs(rs:GetDescendants()) do
    if item:IsA("Tool") and not seen[item.Name] then
        table.insert(uniqueItems, item.Name)
        seen[item.Name] = true
    end
end
table.sort(uniqueItems)

-- SEKMELER
local MasterTab = Window:CreateTab("Owner All Gamepass", 4483362458)
local ViewTab = Window:CreateTab("TÃ¼m EÅŸyalar (View)", 4483362458)
local MovementTab = Window:CreateTab("Hareket (Fly/Noclip)", 4483362458)
local SettingsTab = Window:CreateTab("Ayarlar & Kapat", 4483362458)

-- 1. MUTLAK SAHÄ°P (OWNER ALL GAMEPASS) SÄ°STEMÄ°
MasterTab:CreateButton({
   Name = "ðŸ‘‘ OWNER ALL GAMEPASS - AKTÄ°F ET (EgeKazak_Real1)",
   Callback = function()
      pcall(function()
          -- AllGamepasses.txt iÃ§indeki tÃ¼m ID'ler sisteme tanÄ±mlanÄ±yor [cite: 7, 8, 9, 10, 11, 12, 13, 14]
          local ids = {
              850049439, 667983868, 82773869, 48857519, 25341106, 19660651,
              15927395, 13489552, 13405328, 10991687, 10991517, 9066988,
              9066980, 9066970, 9066924, 1221383640, 1459820822
          }

          -- SÄ°STEM BYPASS: Brookhaven'Ä± "EgeKazak_Real1" iÃ§in kandÄ±rÄ±yoruz
          for _, v in pairs(getgc(true)) do
              if type(v) == "table" then
                  if rawget(v, "AllPassesFetched") ~= nil then v.AllPassesFetched = true end
                  if rawget(v, "__GAMEPASS") ~= nil then v.__GAMEPASS = true end
                  if rawget(v, "Premium") ~= nil then v.Premium = true end
                  if rawget(v, "VIP") ~= nil then v.VIP = true end
                  if rawget(v, "Unlocked") ~= nil then v.Unlocked = true end
              end
          end

          -- MarketPlace Hook (Sorgulara 'True' dÃ¶ndÃ¼rÃ¼r)
          local mt = getrawmetatable(game)
          setreadonly(mt, false)
          local old = mt.__index
          mt.__index = newcclosure(function(t, k)
              if k == "UserOwnsGamePassAsync" or k == "PlayerOwnsAsset" then return true end
              return old(t, k)
          end)

          -- ADS & SPONSOR MENÃœSÃœNÃœ ZORLA AKTÄ°F ET
          local MainGUI = lp.PlayerGui:FindFirstChild("MainGUIHandler", true)
          if MainGUI then
              local adsFrame = MainGUI:FindFirstChild("AdStore", true)
              if adsFrame then 
                  adsFrame.Visible = true 
                  adsFrame.Position = UDim2.new(0.5, 0, 0.5, 0)
              end
              -- Sponsor butonlarÄ±nÄ± EgeKazak_Real1 iÃ§in aÃ§
              for _, b in pairs(MainGUI:GetDescendants()) do
                  if b.Name == "Ads" or b.Name == "Sponsor" then
                      b.Visible = true
                      b.Transparency = 0
                  end
              end
          end
          
          Rayfield:Notify({
              Title = "SYSTEM STATUS",
              Content = "Selam Owner! TÃ¼m Gamepassler EgeKazak_Real1 adÄ±na tanÄ±mlandÄ±.",
              Duration = 6
          })
      end)
   end,
})

-- 2. TÃœM EÅžYALAR SEÃ‡Ä°CÄ° (VIEW/SPAWN)
ViewTab:CreateDropdown({
   Name = "Brookhaven Envanteri",
   Options = uniqueItems,
   CurrentOption = "",
   Callback = function(Option)
       local target = nil
       for _, item in pairs(rs:GetDescendants()) do
           if item:IsA("Tool") and item.Name == Option then
               target = item
               break
           end
       end
       if target then
           target:Clone().Parent = lp.Backpack
           Rayfield:Notify({Title = "EÅŸya Spawn Edildi", Content = Option .. " envanterine geldi.", Duration = 2})
       end
   end,
})

-- 3. HAREKET SÄ°STEMÄ° (FLY/NOCLIP)
MovementTab:CreateToggle({
   Name = "UÃ§ma (Fly)",
   CurrentValue = false,
   Callback = function(Value)
      flying = Value
      local char = lp.Character or lp.CharacterAdded:Wait()
      local root = char:WaitForChild("HumanoidRootPart")
      local hum = char:WaitForChild("Humanoid")
      if flying then
          bGyro = Instance.new("BodyGyro", root)
          bGyro.P = 9e4
          bGyro.maxTorque = Vector3.new(9e9, 9e9, 9e9)
          bVel = Instance.new("BodyVelocity", root)
          bVel.maxForce = Vector3.new(9e9, 9e9, 9e9)
          spawn(function()
              while flying do
                  runService.RenderStepped:Wait()
                  local moveVec = require(lp.PlayerScripts:WaitForChild("PlayerModule")):GetControls():GetMoveVector()
                  bVel.Velocity = (camera.CFrame.LookVector * -moveVec.Z + camera.CFrame.RightVector * moveVec.X) * flySpeed
                  bGyro.CFrame = camera.CFrame
                  hum.PlatformStand = true
              end
              if bGyro then bGyro:Destroy() end
              if bVel then bVel:Destroy() end
              hum.PlatformStand = false
          end)
      end
   end,
})

MovementTab:CreateSlider({
   Name = "Fly HÄ±zÄ±",
   Range = {10, 500},
   Increment = 10,
   CurrentValue = 50,
   Callback = function(Value) flySpeed = Value end,
})

MovementTab:CreateToggle({
   Name = "Noclip (Duvar GeÃ§me)",
   CurrentValue = false,
   Callback = function(Value)
      noclip = Value
      runService.Stepped:Connect(function()
         if noclip and lp.Character then
            for _, v in pairs(lp.Character:GetDescendants()) do
               if v:IsA("BasePart") then v.CanCollide = false end
            end
         end
      end)
   end,
})

-- 4. SETTINGS & DESTROY
SettingsTab:CreateButton({
   Name = "Scripti Kapat (DÃ¼zgÃ¼n Destroy)",
   Callback = function()
      Rayfield:Destroy()
   end,
})
