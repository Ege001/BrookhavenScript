local lp = game.Players.LocalPlayer
local runService = game:GetService("RunService")
local camera = workspace.CurrentCamera
local rs = game:GetService("ReplicatedStorage")
local ownerName = "EgeKazak_Real1"

-- DÄ°L SÄ°STEMÄ° (AI Language Module)
local Lang = {
    TR = {Owner = "SAHÄ°P", Movement = "Hareket", Vehicles = "AraÃ§lar", World = "DÃ¼nya", Items = "EÅŸyalar", Settings = "Ayarlar"},
    EN = {Owner = "OWNER", Movement = "Movement", Vehicles = "Vehicles", World = "World", Items = "Items", Settings = "Settings"},
    -- DiÄŸer diller AI tarafÄ±ndan dinamik iÅŸlenebilir
}
local curr = Lang.TR

local Window = Rayfield:CreateWindow({
   Name = "ðŸ‘‘ Gemini AI Hub V27 | OWNER: " .. ownerName,
   LoadingTitle = "AI Sistemleri Optimize Ediliyor...",
   LoadingSubtitle = "EgeKazak_Real1 Ä°Ã§in Tam Yetki",
