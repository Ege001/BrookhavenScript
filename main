   Name = "Hƒ±z (WalkSpeed)",
   Range = {MIN_SPEED, MAX_SPEED},
   CurrentValue = _G.Speed,
   Callback = function(v) _G.Speed = v end,
})

MoveTab:CreateSlider({
   Name = "Zƒ±plama (JumpPower)",
   Range = {MIN_JUMP, MAX_JUMP},
   CurrentValue = _G.Jump,
   Callback = function(v) _G.Jump = v end,
})

