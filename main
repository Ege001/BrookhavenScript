local function GiveVipTool(name)
    pcall(function()
        -- ShowGamepass.txt'deki IsOwned mantÄ±ÄŸÄ±nÄ± kandÄ±rarak eÅŸyayÄ± istiyoruz [cite: 4, 6]
        local remote = rs:FindFirstChild("ItemRemote", true) or rs:FindFirstChild("GiveItem", true)
        if remote then
            -- Brookhaven'Ä±n VIP eÅŸyalarÄ± iÃ§in sunucuya 'sahibim' sinyali gÃ¶nderir
            remote:FireServer(name)
        end
        
        -- Fiziksel kopyalama denemesi
        local tool = rs:FindFirstChild(name, true)
        if tool and tool:IsA("Tool") then
            local c = tool:Clone()
            c.Parent = lp.Backpack
            Rayfield:Notify({Title = "SUCCESS", Content = name .. " Envantere ZorlandÄ±!", Duration = 3})
        else
            Rayfield:Notify({Title = "HATA", Content = name .. " bulunamadÄ±, VIP kontrolÃ¼ geÃ§ilemedi.", Duration = 3})
        end
    end)
end

