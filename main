-- 3. Gamepass & Data Bypass (ƒ∞stediƒüin Full Kƒ±sƒ±m)
pcall(function()
    -- Client-side UI Bypass
    local showGP = ReplicatedStorage:FindFirstChild("ShowGamepass", true)
    if showGP and showGP:IsA("ModuleScript") then
        local sgp = require(showGP)
        sgp.IsOwned = function() return true end
        sgp.IsPlayerOwned = function() return true end
    end
    
    -- Data Module Bypass
    local gpData = ReplicatedStorage:FindFirstChild("Gamepass", true)
    if gpData and gpData:IsA("ModuleScript") then
        local gpc = require(gpData)
        gpc.CanPlayerViewAdvertisements = function() return true end
        if gpc.HasGamepass then gpc.HasGamepass = function() return true end end
    end
end)

