               or ReplicatedStorage:FindFirstChild("AdsRemote", true)
           if adsRemote then
               adsRemote:FireServer(getgenv().AdsMessage)
               Rayfield:Notify({Title="Ba≈üarƒ±lƒ±", Content="Reklamlar g√ºncellendi!", Duration=3})
           end
       end)
   end,
})

AdsTab:CreateButton({
    Name = "üö´ Reklamlarƒ± Temizle",
    Callback = function()
        local adsRemote = ReplicatedStorage:FindFirstChild("UpdateAds", true)
        if adsRemote then adsRemote:FireServer("") end
    end
})

