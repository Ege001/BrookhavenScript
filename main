-- 4. DASHBOARD (ANA SAYA√á VE TETƒ∞KLEYƒ∞Cƒ∞)
DashTab:CreateSection("Sunucu Bilgileri")
DashTab:CreateLabel("Kullanƒ±cƒ±: " .. lp.Name)

DashTab:CreateButton({
    Name = "üõ†Ô∏è T√ºm Eventleri Tetikle (Trigger All)",
    Callback = function()
        for _,v in pairs(game:GetDescendants()) do
            if v:IsA("RemoteEvent") and (v.Name:lower():find("click") or v.Name:lower():find("trigger")) then
                pcall(function() v:FireServer() end)
            end
        end
        Rayfield:Notify({Title="Tetiklendi", Content="T√ºm etkile≈üimler zorlandƒ±!", Duration=3})
    end
})

-- 5. ADS MENU (BYPASS & PANOLAR)
