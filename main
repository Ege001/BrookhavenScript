-- 5. Global Deƒüi≈ükenler & Limitler
_G.Speed = 16
_G.Jump = 50
_G.FOV = 70
_G.Noclip = false
_G.InfJump = false
_G.Fly = false
_G.FlySpeed = 50

local MIN_SPEED, MAX_SPEED = 16, 1000
local MIN_JUMP, MAX_JUMP = 50, 1000

-- 6. Sekmeler (Orijinal sƒ±ralama ve isimler korunarak)
