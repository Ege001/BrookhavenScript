local function UpdateLanguage()
    for key, element in pairs(UI_Elements) do
        pcall(function()
            if element.SetTitle then
                element:SetTitle(Translations[_G.Language][key] or key)
            elseif element.SetText then
                element:SetText(Translations[_G.Language][key] or key)
            end
        end)
    end
end

-- 4. RAYFIELD UI
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()
local Window = Rayfield:CreateWindow({
   Name = "üëë SOVEREIGN V46 | FULL",
   LoadingTitle = "Apex Ultimate Edition",
   LoadingSubtitle = "by EgeKazak_Real1",
   Theme = "DarkBlue",
   ConfigurationSaving = { Enabled = false }
})

-- SEKMELER
local MainTab = Window:CreateTab("üè† Ana Panel", 4483362458)
local MoveTab = Window:CreateTab("‚ö° Hareket", 4483362458)
local TPTab = Window:CreateTab("‚úàÔ∏è I≈üƒ±nlanma", 4483362458)
local ExtraTab = Window:CreateTab("‚ú® Ekstralar", 4483362458)

-- 5. ANA PANEL
MainTab:CreateDropdown({
    Name = "Dil Se√ßimi / Language",
    Options = {"TR", "EN"},
    CurrentOption = _G.Language,
    Callback = function(Option)
        _G.Language = Option
        UpdateLanguage()
        Rayfield:Notify({Title = "Language", Content = "Language changed to: " .. Option, Duration = 2})
    end,
})

local adsBtn = MainTab:CreateButton({
   Name = Translations[_G.Language]["AdsButton"],
   Callback = function()
       pcall(function()
           -- Sadece net reklam isimlerini i√ßerenleri a√ß, alakasƒ±zlarƒ± es ge√ß
           for _, v in pairs(lp.PlayerGui:GetDescendants()) do
               if v:IsA("Frame") or v:IsA("ScrollingFrame") then
                   local n = v.Name:lower()
                   -- Filtreyi daralttƒ±m, sadece reklam ve promo odaklƒ±
                   if n:find("advert") or n:find("promo") or (n:find("ad") and not n:find("admin") and not n:find("load")) then
                       v.Visible = true
                       if v.Parent:IsA("GuiObject") then v.Parent.Visible = true end
                   end
               end
           end
           -- Sadece Reklam tetikleyici eventleri ate≈üle
           local rem = ReplicatedStorage:FindFirstChild("ShowAds", true) or ReplicatedStorage:FindFirstChild("TriggerAd", true)
           if rem and rem:IsA("RemoteEvent") then rem:FireServer() end
       end)
   end,
})
UI_Elements["AdsButton"] = adsBtn

local resetBtn = MainTab:CreateButton({
    Name = Translations[_G.Language]["ResetAll"],
    Callback = function()
        _G.Speed = 16
        _G.Jump = 50
        _G.FOV = 70
        Camera.FieldOfView = 70
        _G.Fly = false
        _G.Noclip = false
        Rayfield:Notify({Title = "Reset", Content = Translations[_G.Language]["NotifyReset"], Duration = 3})
    end,
})
UI_Elements["ResetAll"] = resetBtn

local destroyBtn = MainTab:CreateButton({
    Name = Translations[_G.Language]["DestroyButton"],
    Callback = function()
        pcall(function()
            _G.Speed = 16
            _G.Jump = 50
            _G.Fly = false
            _G.Noclip = false
            Camera.FieldOfView = 70
            for _, c in pairs(connections) do c:Disconnect() end
            if lp.PlayerGui:FindFirstChild("SOV_HUD") then lp.PlayerGui.SOV_HUD:Destroy() end
            Rayfield:Destroy()
        end)
    end,
})
UI_Elements["DestroyButton"] = destroyBtn

-- 6. HAREKET KONTROLLERƒ∞
local speedSlider = MoveTab:CreateSlider({
   Name = Translations[_G.Language]["Speed"],
   Range = {16, 500},
   CurrentValue = _G.Speed,
   Callback = function(v) _G.Speed = v end,
})
UI_Elements["Speed"] = speedSlider

MoveTab:CreateButton({ Name = "‚ûï Speed +10", Callback = function() _G.Speed = _G.Speed + 10 end })
MoveTab:CreateButton({ Name = "‚ûñ Speed -10", Callback = function() _G.Speed = math.max(16, _G.Speed - 10) end })

local jumpSlider = MoveTab:CreateSlider({
    Name = Translations[_G.Language]["Jump"],
    Range = {50, 500},
    CurrentValue = _G.Jump,
    Callback = function(v) _G.Jump = v end,
})
UI_Elements["Jump"] = jumpSlider

MoveTab:CreateButton({ Name = "‚ûï Jump +10", Callback = function() _G.Jump = _G.Jump + 10 end })
MoveTab:CreateButton({ Name = "‚ûñ Jump -10", Callback = function() _G.Jump = math.max(50, _G.Jump - 10) end })

MoveTab:CreateSection("FOV")
MoveTab:CreateButton({ Name = "‚ûï FOV +5", Callback = function() _G.FOV = math.min(120, _G.FOV + 5); Camera.FieldOfView = _G.FOV end })
MoveTab:CreateButton({ Name = "‚ûñ FOV -5", Callback = function() _G.FOV = math.max(30, _G.FOV - 5); Camera.FieldOfView = _G.FOV end })

local noclipTog = MoveTab:CreateToggle({ Name = Translations[_G.Language]["Noclip"], Callback = function(v) _G.Noclip = v end })
UI_Elements["Noclip"] = noclipTog
local flyTog = MoveTab:CreateToggle({ Name = Translations[_G.Language]["Fly"], Callback = function(v) _G.Fly = v end })
UI_Elements["Fly"] = flyTog

