local Camera = workspace.CurrentCamera

_G.Speed = 16
_G.Jump = 50
_G.FOV = 70
_G.Noclip = false
_G.Fly = false
_G.Language = "TR" -- VarsayÄ±lan

local UI_Refs = {}

