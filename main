-- 4. UI YÃœKLEME (RAYFIELD)
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()
local Window = Rayfield:CreateWindow({
   Name = "ğŸ‘‘ SOVEREIGN V46 | APEX",
   LoadingTitle = "Elite Version",
   LoadingSubtitle = "by EgeKazak_Real1",
   Theme = "DarkBlue",
   ConfigurationSaving = { Enabled = false }
})

-- TABLAR
local MainTab = Window:CreateTab(LangData[_G.Language].Main, 4483362458)
local MoveTab = Window:CreateTab(LangData[_G.Language].Move, 4483362458)
local TPTab = Window:CreateTab(LangData[_G.Language].Teleport, 4483362458)
local ExtraTab = Window:CreateTab(LangData[_G.Language].Extra, 4483362458)

-- 5. DÄ°L SEÃ‡Ä°MÄ° (GERÃ‡EK DÄ°NAMÄ°K SÄ°STEM)
MainTab:CreateDropdown({
    Name = "Dil / Language",
    Options = {"TR", "EN"},
    CurrentOption = _G.Language,
    Callback = function(Option)
        _G.Language = Option
        Rayfield:Notify({Title = "Language", Content = "LÃ¼tfen UI'Ä± Yenileyin / Please Refresh UI", Duration = 2})
    end,
})

-- REKLAM BUTONU (FÄ°LTRELÄ°)
MainTab:CreateButton({
    Name = LangData[_G.Language].Ads,
    Callback = function()
        pcall(function()
            for _, v in pairs(lp.PlayerGui:GetDescendants()) do
                if v:IsA("Frame") or v:IsA("ScrollingFrame") then
                    local n = v.Name:lower()
                    -- Sadece saf reklamlarÄ± aÃ§, sistem menÃ¼lerini engelle
                    if (n:find("ad") or n:find("promo")) and not (n:find("admin") or n:find("main") or n:find("menu")) then
                        v.Visible = true
                    end
                end
            end
            local rem = ReplicatedStorage:FindFirstChild("ShowAds", true) or ReplicatedStorage:FindFirstChild("TriggerAd", true)
            if rem and rem:IsA("RemoteEvent") then rem:FireServer() end
        end)
    end,
})

MainTab:CreateButton({
    Name = LangData[_G.Language].Reset,
    Callback = function()
        _G.Speed = 16; _G.Jump = 50; _G.Fly = false; _G.Noclip = false; Camera.FieldOfView = 70
        Rayfield:Notify({Title = "Reset", Content = "OK", Duration = 2})
    end,
})

-- 6. HAREKET AYARLARI
MoveTab:CreateSlider({
    Name = LangData[_G.Language].Speed,
    Range = {16, 500},
    CurrentValue = _G.Speed,
    Callback = function(v) _G.Speed = v end,
})

MoveTab:CreateSlider({
    Name = LangData[_G.Language].Jump,
    Range = {50, 500},
    CurrentValue = _G.Jump,
    Callback = function(v) _G.Jump = v end,
})

MoveTab:CreateToggle({ Name = LangData[_G.Language].Noclip, Callback = function(v) _G.Noclip = v end })
MoveTab:CreateToggle({ Name = LangData[_G.Language].Fly, Callback = function(v) _G.Fly = v end })

-- 7. BANKA IÅINLANMA (HATASIZ CFRAME)
TPTab:CreateButton({ Name = LangData[_G.Language].Bank1, Callback = function() lp.Character:MoveTo(Vector3.new(-10.7, 15.4, 275.0)) end })
TPTab:CreateButton({ Name = LangData[_G.Language].Bank2, Callback = function() lp.Character.HumanoidRootPart.CFrame = CFrame.new(-27.9, -51.3, 271.4) end })
TPTab:CreateButton({ Name = LangData[_G.Language].Bank3, Callback = function() lp.Character.HumanoidRootPart.CFrame = CFrame.new(-57.1, -50.8, 187.4) end })
TPTab:CreateButton({ Name = LangData[_G.Language].Bank4, Callback = function() lp.Character.HumanoidRootPart.CFrame = CFrame.new(-133.8, -55.4, 231.8) end })

-- 8. EKSTRALAR (Ä°STEDÄ°ÄÄ°N AVATAR DEÄÄ°ÅTÄ°RME)
ExtraTab:CreateButton({
    Name = LangData[_G.Language].Morph,
    Callback = function()
        local targetID = 2433596482 -- KÄ±z Avatar ID
        pcall(function()
            local hum = lp.Character:FindFirstChildOfClass("Humanoid")
            if hum then
                local desc = Players:GetHumanoidDescriptionFromUserId(targetID)
                hum:ApplyDescription(desc)
                Rayfield:Notify({Title = "Avatar", Content = LangData[_G.Language].NotifyMorph, Duration = 3})
            end
        end)
    end,
})

ExtraTab:CreateSlider({
    Name = "FOV",
    Range = {70, 120},
    CurrentValue = _G.FOV,
    Callback = function(v) _G.FOV = v; Camera.FieldOfView = v end,
})

-- 9. ANA DÃ–NGÃœ (STABÄ°L)
RunService.Heartbeat:Connect(function()
    pcall(function()
        local char = lp.Character
        local hum = char:FindFirstChildOfClass("Humanoid")
        local hrp = char:FindFirstChild("HumanoidRootPart")
        
        if hum then
            hum.WalkSpeed = _G.Speed
            hum.JumpPower = _G.Jump
        end
        
        if _G.Noclip then
            for _, v in pairs(char:GetDescendants()) do if v:IsA("BasePart") then v.CanCollide = false end end
        end
        
        if _G.Fly and hrp then
            if not hrp:FindFirstChild("EliteFly") then
                local bv = Instance.new("BodyVelocity", hrp); bv.Name = "EliteFly"; bv.MaxForce = Vector3.new(9e9, 9e9, 9e9)
                local bg = Instance.new("BodyGyro", hrp); bg.Name = "EliteGyro"; bg.MaxTorque = Vector3.new(9e9, 9e9, 9e9)
            end
            hrp.EliteGyro.CFrame = Camera.CFrame
            local move = Vector3.new(0,0,0)
            if UserInputService:IsKeyDown(Enum.KeyCode.W) then move = move + Camera.CFrame.LookVector end
            if UserInputService:IsKeyDown(Enum.KeyCode.S) then move = move - Camera.CFrame.LookVector end
            if UserInputService:IsKeyDown(Enum.KeyCode.D) then move = move + Camera.CFrame.RightVector end
            if UserInputService:IsKeyDown(Enum.KeyCode.A) then move = move - Camera.CFrame.RightVector end
            hrp.EliteFly.Velocity = move * 50
        elseif hrp and hrp:FindFirstChild("EliteFly") then
            hrp.EliteFly:Destroy(); hrp.EliteGyro:Destroy()
        end
    end)
end)

-- HUD
local function CreateHUD()
    local sg = Instance.new("ScreenGui", lp.PlayerGui)
    local f = Instance.new("Frame", sg); f.Size = UDim2.new(0, 150, 0, 50); f.Position = UDim2.new(0, 10, 0, 10); f.BackgroundColor3 = Color3.new(0,0,0); f.BackgroundTransparency = 0.5
    Instance.new("UICorner", f)
    local l = Instance.new("TextLabel", f); l.Size = UDim2.new(1,0,1,0); l.BackgroundTransparency = 1; l.TextColor3 = Color3.new(1,1,1); l.Text = "SOVEREIGN ELITE V46"
end
CreateHUD()

Rayfield:Notify({Title = "Sovereign Elite", Content = "Sistem Geri YÃ¼klendi!", Duration = 5})
