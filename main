-- Sovereign Elite V33 - Optimized by Gemini AI
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local lp = game.Players.LocalPlayer
local rs = game:GetService("ReplicatedStorage")
local camera = workspace.CurrentCamera
local runService = game:GetService("RunService")

-- PENCERE (Lyra Hub TasarÄ±mÄ±)
local Window = Rayfield:CreateWindow({
   Name = "ğŸ‘‘ SOVEREIGN ELITE V33 | OWNER: EgeKazak_Real1",
   LoadingTitle = "Ads & Data Bypass YÃ¼kleniyor...",
   LoadingSubtitle = "Hatalar Giderildi, Reklamlar AÃ§Ä±ldÄ±",
   ConfigurationSaving = { Enabled = true, FolderName = "SovereignEliteV33" },
   Theme = "DarkBlue" 
})

-- DEÄÄ°ÅKENLER
local flying, noclip, infJump = false, false, false
local flySpeed, viewTarget = 50, nil

-- --- [1. ANA PANEL: DATA & REKLAM BYPASS] ---
local MainTab = Window:CreateTab("ğŸ  Ana Panel", 4483362458)
MainTab:CreateSection("Sistem Kilitlerini KÄ±r")

MainTab:CreateButton({
   Name = "ğŸ”“ REKLAM & DATA BYPASS (Ads Aktif Et)",
   Callback = function()
       pcall(function()
           -- 1. Reklam Uygunluk Bypass (Gamepass.txt analizi ile)
           for _, v in pairs(getgc(true)) do
               if type(v) == "table" then
                   if rawget(v, "CanPlayerViewAdvertisements") then
                       v.CanPlayerViewAdvertisements = function() return true end -- Reklam izleme izni 
                   end
                   if rawget(v, "IsRewardedVideoAdReady") then
                       v.IsRewardedVideoAdReady = function() return game:GetService("ReplicatedStorage").Packages.Promise.resolve(Enum.AdAvailabilityResult.IsAvailable) end -- Reklam hazÄ±r uyarÄ±sÄ± 
                   end
               end
           end

           -- 2. PlayersBag & Ev Alma Fix (ShowGamepass.txt analizi ile)
           -- "Zaten Sahipsin" hatasÄ±nÄ± engellemek iÃ§in sadece gerekli deÄŸerleri tetikliyoruz
           local pb = lp:FindFirstChild("PlayersBag")
           if pb then
               for _, v in pairs(pb:GetDescendants()) do
                   if v:IsA("BoolValue") and v.Name ~= "HouseOwned" then -- Ev mÃ¼lkiyetini bozmamak iÃ§in [cite: 49]
                       v.Value = true
                   end
               end
           end
           Rayfield:Notify({Title = "BAÅARILI", Content = "Reklamlar ve Yetkiler Aktif!", Duration = 5})
       end)
   end,
})

MainTab:CreateButton({
   Name = "ğŸ“¢ Ads MenÃ¼sÃ¼nÃ¼ & Butonunu Zorla Getir",
   Callback = function()
       pcall(function()
           local gui = lp.PlayerGui:FindFirstChild("MainGUIHandler", true)
           if gui then
               local ads = gui:FindFirstChild("AdStore", true)
               if ads then ads.Visible = true; ads.Position = UDim2.new(0.5, 0, 0.5, 0) end
               for _, b in pairs(gui:GetDescendants()) do
                   if b.Name == "Ads" or b.Name == "Sponsor" then
                       b.Visible = true; b.Transparency = 0
                   end
               end
           end
       end)
   end,
})

-- --- [2. OYUNCU: VIEW & TROLL] ---
local PlayerTab = Window:CreateTab("ğŸ‘¤ Oyuncu", 4483362458)
PlayerTab:CreateInput({
   Name = "Oyuncu Ara", PlaceholderText = "Ä°sim...",
   Callback = function(t)
       for _, p in pairs(game.Players:GetPlayers()) do
           if p.Name:lower():find(t:lower()) then viewTarget = p end
       end
   end,
})

PlayerTab:CreateToggle({
   Name = "View Player (Ä°zle)",
   Callback = function(v) camera.CameraSubject = (v and viewTarget) and viewTarget.Character.Humanoid or lp.Character.Humanoid end,
})

PlayerTab:CreateButton({
   Name = "Avatar Kopyala (Copy Appearance)",
   Callback = function() if viewTarget then lp.CharacterAppearanceId = viewTarget.UserId; lp.Character:BreakJoints() end end,
})

-- --- [3. HAREKET: LYRA HUB Ã–ZELLÄ°KLERÄ°] ---
local MoveTab = Window:CreateTab("âš¡ Hareket", 4483362458)
MoveTab:CreateSlider({Name = "WalkSpeed", Range = {16, 500}, Callback = function(v) lp.Character.Humanoid.WalkSpeed = v end})
MoveTab:CreateSlider({Name = "JumpPower", Range = {50, 500}, Callback = function(v) lp.Character.Humanoid.JumpPower = v end})
MoveTab:CreateToggle({Name = "Noclip", Callback = function(v) noclip = v end})
runService.Stepped:Connect(function() if noclip and lp.Character then for _, p in pairs(lp.Character:GetDescendants()) do if p:IsA("BasePart") then p.CanCollide = false end end end end)

-- --- [4. EÅYA SEÃ‡Ä°CÄ°] ---
local ToolTab = Window:CreateTab("ğŸ“¦ EÅŸyalar", 4483362458)
local toolList = {}
for _, t in pairs(rs:GetDescendants()) do if t:IsA("Tool") then table.insert(toolList, t.Name) end end
ToolTab:CreateDropdown({
   Name = "EÅŸya Al", Options = toolList,
   Callback = function(o) local t = rs:FindFirstChild(o, true); if t then t:Clone().Parent = lp.Backpack end end,
})

