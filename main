-- 4. ANA PANEL (STRƒ∞CT ADS)
MainTab:CreateButton({
    Name = "üì¢ REKLAMLARI TETƒ∞KLE (Strict Ad Filter)",
    Callback = function()
        pcall(function()
            for _, v in pairs(lp.PlayerGui:GetDescendants()) do
                if v:IsA("GuiObject") then
                    local n = v.Name:lower()
                    -- SADECE "Ad" veya "Frame" i√ßerenleri hedefle, sistemleri engelle
                    local isStrictAd = (n:find("ad") and not n:find("admin")) or (n:find("promo") and n:find("frame"))
                    if isStrictAd then
                        v.Visible = true
                    end
                end
            end
        end)
    end,
})

MainTab:CreateButton({
    Name = "üîÑ T√ºm Ayarlarƒ± Sƒ±fƒ±rla",
    Callback = function()
        _G.Speed = 16; _G.Jump = 50; _G.FOV = 70; _G.SpeedEnabled = false; _G.JumpEnabled = false
        _G.Fly = false; _G.Noclip = false; Camera.FieldOfView = 70
    end,
})

-- 5. HAREKET (SAYI Gƒ∞Rƒ∞≈ûƒ∞ + ARTTIR/AZALT)
