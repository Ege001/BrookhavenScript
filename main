   Name = "Noclip (Duvar Ge√ß)",
   Callback = function(v) _G.Noclip = v end,
})

MoveTab:CreateToggle({
    Name = "U√ßma (Fly)",
    Callback = function(v) 
        _G.Fly = v 
        if not v and lp.Character and lp.Character:FindFirstChild("HumanoidRootPart") then
            lp.Character.HumanoidRootPart:FindFirstChild("FlyBV"):Destroy()
            lp.Character.HumanoidRootPart:FindFirstChild("FlyBG"):Destroy()
        end
    end,
})

-- 8. Ana Kontrol (Reklam & Admin)
MainTab:CreateButton({
   Name = "üì¢ REKLAM MEN√úS√úN√ú ZORLA A√á",
   Callback = function()
       pcall(function()
           local gui = lp.PlayerGui:FindFirstChild("MainGUIHandler", true) or lp.PlayerGui:FindFirstChild("MainGui", true)
           if gui then
                for _, v in pairs(gui:GetDescendants()) do
                    if v.Name:lower():match("ad") or v.Name:lower():match("store") then
                        v.Visible = true
                        if v:IsA("ScrollingFrame") then v.CanvasPosition = Vector2.new(0,0) end
                    end
                end
           end
       end)
   end,
})

