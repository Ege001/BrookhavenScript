-- DEÄžÄ°ÅžKENLER
local flying, noclip = false, false
local flySpeed, walkSpeed, jumpPower = 50, 16, 50
local bGyro, bVel, viewTarget

-- 1. OWNER & GAMEPASS MODÃœLÃœ (AllGamepasses.txt Entegreli)
local MasterTab = Window:CreateTab(curr.Owner, 4483362458)
MasterTab:CreateButton({
   Name = "ðŸ”¥ MUTLAK YETKÄ° (All Gamepasses & PlayersBag)",
   Callback = function()
      pcall(function()
          -- AllGamepasses.txt ID'leri [cite: 6, 7, 8, 9, 10, 11, 12, 13, 14]
          local ids = {850049439, 667983868, 82773869, 48857519, 25341106, 19660651, 15927395, 13489552, 13405328, 10991687, 10991517, 9066988, 9066980, 9066970, 9066924, 1221383640, 1459820822}
          
          -- PlayersBag & Game GC Bypass 
          for _, v in pairs(getgc(true)) do
              if type(v) == "table" then
                  if rawget(v, "AllPassesFetched") ~= nil then v.AllPassesFetched = true end
                  v.Premium, v.VIP, v.Unlocked = true, true, true
              end
          end
          
          local pb = lp:FindFirstChild("PlayersBag")
          if pb then
              for _, val in pairs(pb:GetDescendants()) do
                  if val:IsA("BoolValue") then val.Value = true end
              end
          end
          Rayfield:Notify({Title = "AI Onay", Content = "TÃ¼m Brookhaven yetkileri tanÄ±mlandÄ±.", Duration = 5})
      end)
   end,
})

-- 2. ARAÃ‡ MODÄ°FÄ°YE (RGB & TURBO)
local CarTab = Window:CreateTab(curr.Vehicles, 4483362458)
CarTab:CreateToggle({
   Name = "AraÃ§ Turbo & RGB",
   CurrentValue = false,
   Callback = function(Value)
      _G.CarMod = Value
      spawn(function()
         while _G.CarMod do
            pcall(function()
                for _, v in pairs(workspace.Vehicles:GetChildren()) do
                    local seat = v:FindFirstChildWhichIsA("VehicleSeat", true)
                    if seat and seat.Occupant and seat.Occupant.Parent == lp.Character then
                        seat.MaxSpeed, seat.Torque = 500, 50000
                        if v:FindFirstChild("Body") then
                            v.Body.Color = Color3.fromHSV(tick() % 5 / 5, 1, 1) -- RGB Efekti
                        end
                    end
                end
            end)
            task.wait(0.1)
         end
      end)
   end,
})

-- 3. VIEW & AVATAR COPY (Infinite Yield TarzÄ±)
local PlayerTab = Window:CreateTab("Oyuncu (View/Copy)", 4483362458)
PlayerTab:CreateInput({
   Name = "Oyuncu AdÄ± Yaz",
   PlaceholderText = "Ä°sim...",
   Callback = function(Text)
      for _, p in pairs(game.Players:GetPlayers()) do
          if p.Name:lower():find(Text:lower()) then viewTarget = p end
      end
   end,
})

PlayerTab:CreateToggle({
   Name = "View (Ä°zle)",
   CurrentValue = false,
   Callback = function(Value)
      if Value and viewTarget then
          camera.CameraSubject = viewTarget.Character.Humanoid
      else
          camera.CameraSubject = lp.Character.Humanoid
      end
   end,
})

PlayerTab:CreateButton({
   Name = "Avatar Kopyala (Copy Avatar)",
   Callback = function()
      if viewTarget then
          lp.CharacterAppearanceId = viewTarget.UserId
          lp.Character:BreakJoints() -- Yeniden doÄŸunca kopyalanÄ±r
      end
   end,
})

-- 4. HAREKET & FÄ°ZÄ°K (Fly/Noclip/Gravity)
local MoveTab = Window:CreateTab(curr.Movement, 4483362458)
MoveTab:CreateToggle({Name = "Fly", Callback = function(v) flying = v end})
MoveTab:CreateSlider({Name = "HÄ±z", Range = {16, 500}, Callback = function(v) lp.Character.Humanoid.WalkSpeed = v end})
MoveTab:CreateSlider({Name = "YerÃ§ekimi", Range = {0, 196}, CurrentValue = 196, Callback = function(v) workspace.Gravity = v end})

