    Name = "üóëÔ∏è SCRIPTI TAMAMEN YOK ET (Destroy)",
    Callback = function()
        _G.SovereignActive = false
        for _, c in pairs(connections) do c:Disconnect() end
        Rayfield:Destroy()
        local h = lp.PlayerGui:FindFirstChild("UltHUD")
        if h then h:Destroy() end
    end,
})

MainTab:CreateButton({
    Name = "üì¢ REKLAMLARI ZORLA A√á",
    Callback = function()
        for _, v in pairs(lp.PlayerGui:GetDescendants()) do
            if v:IsA("GuiObject") and (v.Name:lower():find("ad") or v.Name:lower():find("frame")) then
                v.Visible = true
            end
        end
    end,
})

