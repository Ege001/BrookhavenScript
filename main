-- Modern UI Yükleme
local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "Gemini Ultra Hub V8 | MASTER",
   LoadingTitle = "Sistem Çekirdeğine Erişiliyor...",
   LoadingSubtitle = "Ege001 Özel - Bypass V4",
   ConfigurationSaving = { Enabled = true, FolderName = "GeminiMaster" }
})

-- DEĞİŞKENLER (Fizik & Sistem)
local lp = game.Players.LocalPlayer
local selectedPlayer = nil
local noclip = false
local flying = false
local flySpeed = 50

-- SEKMELER
local MainTab = Window:CreateTab("Karakter (Süper)", 4483362458)
local VIPTab = Window:CreateTab("AdStore & Full Pass", 4483362458)
local ViewTab = Window:CreateTab("İzleme & Troll", 4483362458)
local VehicleTab = Window:CreateTab("Araç Kontrol", 4483362458)

-- 1. ADSTORE & REKLAM BYPASS (TXT DOSYASI ENTEGRASYONLU)
VIPTab:CreateButton({
   Name = "Tüm Gamepass & AdStore Aç (Full Bypass)",
   Callback = function()
      pcall(function()
          -- MainGUIHandler ve AdStore Erişimi
          local adStore = lp.PlayerGui.MainGUIHandler:FindFirstChild("AdStore", true)
          if adStore then adStore.Visible = true end

          -- Gönderdiğin txt dosyasındaki tüm ID'leri kapsayan bypass 
          local mt = getrawmetatable(game)
          setreadonly(mt, false)
          local old = mt.__index
          mt.__index = newcclosure(function(t, k)
              if k == "UserOwnsGamePassAsync" or k == "PlayerOwnsAsset" then return true end
              return old(t, k)
          end)
          
          -- "AllPassesFetched" ve "__GAMEPASS" zorlaması
          for _, v in pairs(getgc(true)) do
              if type(v) == "table" and (rawget(v, "__GAMEPASS") ~= nil or rawget(v, "AllPassesFetched") ~= nil) then
                  v.__GAMEPASS = true
                  v.AllPassesFetched = true
                  v.Premium = true
              end
          end
          Rayfield:Notify({Title = "Bypass", Content = "Tüm Brookhaven paketleri aktif edildi!", Duration = 5})
      end)
   end,
})

-- 2. GELİŞMİŞ KARAKTER (FLY, SPEED, JUMP, NOCLIP)
MainTab:CreateToggle({
   Name = "Uçma Modu (Fly)",
   CurrentValue = false,
   Callback = function(Value)
      flying = Value
      if flying then
         local bv = Instance.new("BodyVelocity", lp.Character.HumanoidRootPart)
         bv.MaxForce = Vector3.new(math.huge, math.huge, math.huge)
         spawn(function()
            while flying do
               bv.Velocity = lp.Workspace.CurrentCamera.CFrame.LookVector * flySpeed
               task.wait()
            end
            bv:Destroy()
         end)
      end
   end,
})

MainTab:CreateSlider({
   Name = "Uçma Hızı Ayarı",
   Range = {10, 300},
   Increment = 5,
   CurrentValue = 50,
   Callback = function(Value) flySpeed = Value end,
})

MainTab:CreateToggle({
   Name = "Duvar Geçme (Noclip)",
   CurrentValue = false,
   Callback = function(Value)
      noclip = Value
      game:GetService("RunService").Stepped:Connect(function()
         if noclip and lp.Character then
            for _, v in pairs(lp.Character:GetDescendants()) do
               if v:IsA("BasePart") then v.CanCollide = false end
            end
         end
      end)
   end,
})

MainTab:CreateSlider({
   Name = "Yürüme Hızı (WalkSpeed)",
   Range = {16, 500},
   Increment = 1,
   CurrentValue = 16,
   Callback = function(Value) lp.Character.Humanoid.WalkSpeed = Value end,
})

MainTab:CreateSlider({
   Name = "Zıplama Gücü (Jump)",
   Range = {50, 500},
   Increment = 1,
   CurrentValue = 50,
   Callback = function(Value) lp.Character.Humanoid.JumpPower = Value end,
})

-- 3. GELİŞMİŞ VIEW & AVATAR COPY
local pDropdown = ViewTab:CreateDropdown({
   Name = "Kişi Seç",
   Options = {},
   CurrentOption = "",
   Callback = function(Option) selectedPlayer = game.Players:FindFirstChild(Option) end,
})

spawn(function()
    while true do
        local names = {}
        for _, v in pairs(game.Players:GetPlayers()) do
            if v ~= lp then table.insert(names, v.Name) end
        end
        pDropdown:Refresh(names)
        task.wait(2)
    end
end)

ViewTab:CreateToggle({
   Name = "Kişiyi İzle (View)",
   CurrentValue = false,
   Callback = function(Value)
      if Value and selectedPlayer and selectedPlayer.Character then
         game.Workspace.CurrentCamera.CameraSubject = selectedPlayer.Character.Humanoid
      else
         game.Workspace.CurrentCamera.CameraSubject = lp.Character.Humanoid
      end
   end,
})

ViewTab:CreateButton({
   Name = "Avatarını Çal (Copy Outfit)",
   Callback = function()
      if selectedPlayer and selectedPlayer.Character then
          for _, v in pairs(lp.Character:GetChildren()) do
              if v:IsA("Shirt") or v:IsA("Pants") or v:IsA("Accessory") then v:Destroy() end
          end
          for _, v in pairs(selectedPlayer.Character:GetChildren()) do
              if v:IsA("Shirt") or v:IsA("Pants") or v:IsA("Accessory") then v:Clone().Parent = lp.Character end
          end
      end
   end,
})

-- 4. ARAÇ HIZLANDIRMA (FULL AYARLANABİLİR)
VehicleTab:CreateToggle({
   Name = "Süper Araç Modu",
   CurrentValue = false,
   Callback = function(Value)
      _G.CarFast = Value
      spawn(function()
         while _G.CarFast do
            pcall(function()
                local veh = game.Workspace.Vehicles:FindFirstChild(lp.Name .. "Vehicle") or game.Workspace.Vehicles:FindFirstChildWhichIsA("Model")
                local seat = veh:FindFirstChildWhichIsA("VehicleSeat", true)
                if seat and seat.Occupant.Parent == lp.Character then
                   seat.MaxSpeed = _G.CarSpeed or 200
                   seat.Torque = 20000
                end
            end)
            task.wait(0.1)
         end
      end)
   end,
})

VehicleTab:CreateSlider({
   Name = "Araba Max Hız",
   Range = {50, 1000},
   Increment = 10,
   CurrentValue = 200,
   Callback = function(Value) _G.CarSpeed = Value end,
})
